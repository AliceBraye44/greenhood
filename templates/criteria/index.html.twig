{% extends 'base.html.twig' %}

{% block title %}Criterias index{% endblock %}

{% block body %}

    {% include 'navbar.html.twig' %}

    <div class="w-full lg:w-4/5 p-8 mt-6 lg:mt-0 text-gray-900 leading-normal bg-white border border-gray-400 border-rounded flex-grow">

    <h1 class="text-gray-900 text-base no-underline hover:no-underline font-extrabold text-xl">Criterias index</h1>

<div class="flex flex-col mb-6">
    <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
            <div class="overflow-hidden">
                <table class="table-auto min-w-full">
                    <thead class="bg-white border-b">
                        <tr>
                            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">API's name</th>
                            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Data</th>
                            <th scope="col" class="text-sm font-medium text-gray-900 px-4 py-4 text-left">Reference's index</th>
                            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Scale</th>
                            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Coefficient</th>
                            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Perim√®tre</th>
                            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for criteria in criterias %}
                        <tr class="even:bg-grey-100">
                            <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">{{ criteria.name }}</td>
                            <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">{{ criteria.data|slice(0, 10) ~ '...'}}</td>
                            <td class="text-sm text-gray-900 font-light px-4 py-4 whitespace-nowrap">{{ criteria.indexReference }}</td>
                            <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">{{ criteria.coefficient }}</td>
                            <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">{{ criteria.perimeter }} m</td>
                            <td class="flex flex-row justify-between text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                                <a href="{{ path('app_criteria_show', {'id': criteria.id}) }}">
                                    <div><i class="far fa-eye"></i></div>
                                </a>
                                <a href="{{ path('app_criteria_edit', {'id': criteria.id}) }}">
                                    <div><i class="far fa-edit"></i></div>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

    <a class="bg-transparent hover:bg-green-500 text-green-700 font-semibold hover:text-white py-2 px-4 border border-green-500 hover:border-transparent rounded" href="{{ path('app_criteria_new') }}">
        Add a criteria
    </a>



    </div>

{% endblock %}
